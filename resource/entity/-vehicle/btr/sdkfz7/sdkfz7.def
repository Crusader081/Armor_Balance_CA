{ArmoredCar
	(include "/properties/armoredcar.ext")
	(include "/properties/car_mobility.ext")	
	(include "/properties/selection/vehicle.inc"  scale(1.0))
	{Extension "sdkfz7.mdl"}
	{extension "crew.ext"}
	{props "vehicle" "armored_car" "tank" "turret" "wheeled" "explosion_throw_crew" "vision_vehicle_minimum"}
	{targetClass "tank" "fg bullet"}
	{targetSelector "tank_bullet"}
	{patherId "tank.light"}

	{volume "body"
			{tags "body"}
			{component "body"}
			{thickness 3}   
		}
		{volume "body1"
			{tags "body"}
			{component "body"}
			{thickness 3}
		}
		{volume "body2"
					{tags "body"}
					{component "body"}
					{thickness 3}
		}
		{volume "body3"
							{tags "body"}
							{component "body"}
							{thickness 3}
		}
		{volume "body4"
							{tags "body"}
							{component "body"}
							{thickness 3}
		}
		{volume "engine"
			{thickness 3}
		}
		{volume "engine1"
					{thickness 3}
		}
		{Volume "fuel"
			{thickness 1}
		}
	("armor_light" args 1.0)

	{extender "shield"
					(mod "mp"
						{on}
					)
				}
			{component "shield"}
	{extender "inventory"
		{Box
			{item "can" 2}
			{item "repair_kit" 1}
		}
	}	

    {sensor	
	        {visor "main1"
			{vision "moto_crew"}
			{bone "visor1"}
		}		
	}
	
	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("tracks")

	{Chassis
		{Locomotion ("locomotion")}
	}

(define "tank_trace"
    {Track "left"
	    {Tracer
    		{View %fx} ; "tracks"
    		{Bone %boneleft}
	    	{Step %step}			; 0.7 meters
    	}
		{TextureScroller
	    	{Bone "TrackL"}
    		{Length %len}		; 0.6 meters per animation
    	}
    }
    {Track "right"
    	{Tracer 
	    	{View %fx}
    		{Bone %boneright}
    		{Step %step}			; in meters
	    }
		{TextureScroller
	    	{Bone "TrackR"}
    		{Length %len}		; meters per animation
    	}
    }
)

	{Chassis
		("tank_trace" fx("tracks_mid") step(0.52) len(1.0) boneleft("FXtraceL2") boneright("FXtraceR2"))
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("mobility"
			speed(52)
			weight(11.5)
			power(140)
			fuel(215)	
		)
	}
	
   {mass 11500}
   
}
