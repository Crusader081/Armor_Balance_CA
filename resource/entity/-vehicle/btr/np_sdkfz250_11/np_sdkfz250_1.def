{entity
	(include "/properties/armoredcar.ext")
	(include "/properties/car_mobility.ext")	
	(include "/properties/selection/vehicle.inc" scale(1.0))
	{props "vehicle" "armored_car" "tank" "turret" "wheeled" "explosion_throw_crew" "vision_vehicle_minimum"}
	{Extension "sdkfz250_1.mdl"}
	{targetClass "armoredcar" "ap fg bullet"}
	{targetSelector "tank"}
	{PatherId "vehicle.small"}

	{boarder
		{anm "passengers"
			{forward	{begin	"board_SdKfz251-1"} {end "seat_passenger"} {base "close"}}
			{reverse 	{end	"emit_tank_1"} {base "close" -1}}
		}
		{anm "passengers1"
			{forward	{begin	"board_SdKfz251-1"} {end "seat_passenger"} {base "close"}}
			{reverse 	{end	"emit_body"} {base "close" -1}}
		}
		{anm "driver"
			{forward	{begin	"board_SdKfz251-1"} {end "seat_driver_car"} {base "close"}}
			{reverse 	{end	"emit_body" 1} {base "close" -1}}
		}
		{anm "gunner"
			{forward	{begin	"board_SdKfz251-1"} {end "seat_sd251_mgunner"} {base "close"}}
			{reverse 	{end	"emit_body" 1} {base "close" -1}}
		}
	}

	(define "crew_human"
		{placer
			{place "%place" {group "%group"} {linkbone "%bone"} {turnoff {sensor} {shadow}}}
		}
		{boarder
			{door "%door"}
			{link "%door" "%place" {anm "%animation"} {forward putoff} {reverse puton}}
		}
	)

	{placer
		{place "driver" {visor "driver"}}
		{place "gunner" {visor "main"}}
	}

	("crew_human" place(driver)	door(emit1) bone(driver) animation(driver)		group(crew))
	("crew_human" place(commander)	door(emit1) bone(commander) animation(driver)		group(crew))
	("crew_human" place(gunner)	door(emit1) bone(gunner) animation(gunner)		group(crew))
	("crew_human" place(gunner1)	door(emit1) bone(gunner1) animation(gunner)		group(crew))
	("crew_human" place(seat2)	door(emit1) bone(seat02) animation(passengers1)	group(crew))
	("crew_human" place(seat1)	door(emit1) bone(seat01) animation(passengers)	group(crew))
	
	{targetSelector "tank"}
	

	{volume "body"
		{tags "body"}
		{component "body"}
		{thickness 8
			{front	15}
            {top 6}
		    {bottom 6}
		}    
	}
	
	{volume "engine"
		{tags "engine"}
		{component "engine"}
		{thickness 5}
	}
		
	("armor_light" turret(0) body(15 8 8 6))

	{Placer
	          {place "attach01"
	             {entity "mauzer"}
	             {Linkbone "attach01"}
	             {handlebone "basis"}
	             {obstacle disable}
	          }
	          {place "attach02"
	                  {entity "mauzer"}
	                   {Linkbone "attach02"}
	                   {handlebone "basis"}
	                   {obstacle disable}
	          }
	          {place "attach03"
	                   {entity "mauzer"}
	                   {Linkbone "attach03"}
	                   {handlebone "basis"}
	                   {obstacle disable}
	          }
	          {place "attach04"
	                   {entity "mauzer"}
	                   {Linkbone "attach04"}
	                   {handlebone "basis"}
	                   {obstacle disable}
	          }
	}
	 (define "define_place"
	          {placer
	             {place "%place"
	                {linkbone "%place"}
	                {attach squat_lie}
	                {turnoff {shadow}}
	                {obstacle disable}
	             }
	          }
	          {Volume "%place"
	             {tags "attach" "attach_%place"}
	             {able clear {bullet 0} {touch 1}}
	          }
	)
	("wheel" args "wheelright")
	("wheel" args "wheelleft")
	("tracks")

    {sensor	
	        {visor "main1"
			{vision "moto_crew"}
			{bone "visor1"}
		}
	        {visor "main11"
			{vision "moto_crew"}
			{bone "visor11"}
		}		
	}	
	
	{extender "enumerator"
		{digit_folder "ger"}
	}
	{extender "inventory"
		{weapon "mgun"
			{mask "weapon mgun"}
		}
		{box
			{item "ammo mgun" 2100}
		}
	}
	
	{Weaponry
		{place "mgun"
			{type "mgun_main"}
			{LinkBone "mgun"}
			{LinkAnimation "off"}
			{weapon "mg34btr" filled}
			{gunner "gunner"}
			{charger "gunner"}
			{foresight "foresight3"}
            ("abm_mgun")
		}
		{place "mgun1"
			{type "mgun_rear"}
			{LinkBone "mgun1"}
			{LinkAnimation "off"}
			{weapon "mg34btr" filled}
			{gunner "gunner1"}
			{charger "gunner1"}
			{foresight "foresight4"}
            ("abm_mgun")
		}
	}
	
	{mass 5800}
	
	{Chassis
		("tank_trace" fx("tracks_mid") step(0.5) len(0.86) boneleft("FXtraceL2") boneright("FXtraceR2"))
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("mobility"
			speed(76)
			weight(5.8)
			power(100)
			fuel(140)	
		)
	}
	       
}
