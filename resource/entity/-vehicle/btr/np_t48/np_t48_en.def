	          }
	          {place "attach05"
	                  {entity "can"}
	                   {Linkbone "attach05"}
	                   {handlebone "basis"}
	                   {obstacle disable}
	          }
	}
	 (define "define_place"
	          {placer
	             {place "%place"
	                {linkbone "%place"}
	                {attach squat_lie}
	                {turnoff {shadow}}
	                {obstacle disable}
	             }
	          }
	          {Volume "%place"
	             {tags "attach" "attach_%place"}
	             {able clear {bullet 0} {touch 1}}
	          }
	)

	{extender "inventory"
		{box
			{item "ammo bullet57 ap" 80}
			{item "ammo bullet57 fg" 19}
			{item "ammo bullet57 apcr" 2}
		}
	}
	{Weaponry
		{place "gun"
			{weapon "57mm_oqf" filling "ammo bullet57 ap" 1}
			{RestoreIKAfterAim}
		}
	}

	{Chassis
		("tank_trace" fx("tracks_sm") step(0.3) len(0.4) boneleft("wheell4") boneright("wheelr4"))
		("car_trace" fx("tracewheel01") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("mobility"
			speed(72)
			weight(9.0)
			power(147)
			fuel(230)	
		)
	}
	
   {mass 9000}
   
	{bone "turret"
		{speed2 5}
	}
	{bone "gun_rot"
		{speed2 5}
	}
