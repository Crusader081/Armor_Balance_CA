	 {Placer
	          {place "attach01"
	             {entity "can"}
	             {Linkbone "attach01"}
	             {handlebone "basis"}
	             {obstacle disable}
	          }
	          {place "attach02"
	                  {entity "can"}
	                   {Linkbone "attach02"}
	                   {handlebone "basis"}
	                   {obstacle disable}
	          }
	         {place "attach03"
