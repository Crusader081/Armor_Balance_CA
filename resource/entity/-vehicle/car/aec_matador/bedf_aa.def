; Bedford QLB
{entity
	(include "/properties/car.ext")
	(include "/properties/l_car_mobility.ext")	
    (include "/properties/selection/vehicle.inc"  scale(1.1))
    {props "vehicle" "car" "turret" "wheeled" "flak" "barrel1" "vision_vehicle_minimum" "muzzle_zenite"}
	(include "/properties/car_crew.ext")
	{targetClass "car" "fg bullet"}	
	("armor_light" args 1.0)
        {targetSelector "tank_flak"}
    {PatherId "vehicle.small"}

    ("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	("crew_2_human")
	("board_animation"
		place(driver)
		board_begin(board_big-highcar)
		board_end(seat_driver_car)
		base(doorright)
	)
	("board_animation"
		place(commander)
		board_begin(board_big-highcar_driver)
		board_end(seat_passenger)
		base(doorleft)
	)
	{boarder
		{anm "gunner"
			{forward	{begin	"board_body"} {end "seat_driver_car"}}
			{reverse 	{end	"emit_body" 1}}
		}
		{anm "charger"
			{forward	{begin	"board_body"} {end "seat_driver_car"}}
			{reverse 	{end	"emit_body" 1}}
		}
	}
 
        ("crew_human" place(gunner)		bone(gunner)	door(emit4) animation(gunner))
	("crew_human" place(charger)		bone(charger)	door(emit3) animation(gunner))
        
         {placer
		{place "driver" {visor "driver"} {group "crew"}}
		{place "gunner" {visor "main"} {group "crew"}  {openForCrush}}
		{place "commander" {visor "main"} {group "crew"}}
		{place "charger" {visor "main"} {group "crew"} {openForCrush}}
	}

	{placer
		{place "driver" 	{group "crew"}}
		{place "gunner" 	{group "crew"}}
		{place "commander"	{group "crew"}}
		{place "charger"	{group "crew"}}
	}
       
        {volume "turret"
		{thickness 2}
	}
	{component "turret"
		{RepairTime 20}
	}
        {volume "cabin"
                {tags "bodyback"}
		{component "bodyback"}
		{thickness 2}
	}
	        {Volume "bodyback"
		{thickness 2}
	}
        {Volume "engine"
		{thickness 5}
	}
	{Volume "gun"
		{thickness 5}
	}

	{extender "inventory"
		{box
			{item "bullet40_bofors zenite" 100}
			{item "bullet40_bofors ap" 100}
			{item "bullet40_bofors fg" 100}
		}
	}

	{Weaponry
		{place "gun"
			{weapon "40mm_bofors" filling "bullet40_bofors zenite" 4}
            ("abm_zenite")
		}
	}  	

	{mass 7700}
	
	{Chassis
	("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
	("car_trace" fx("tracewheel02") step(0.09) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility"
			speed(65)
			weight(7.7)
			power(72)
			fuel(151)	
		)
	}

	{Extension "bedf_aa.mdl"}
	{bone "turret"
		{speed2 40}
	}
	{bone "gun_rot"
		{speed2 25}
		{limits -5 85}

	}
}
