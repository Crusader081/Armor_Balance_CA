			{reverse {end "emit_tank_1_hold" 1}}
		}
	}

	{sensor
		{visor "driver"
			{bone "visor2"}
			{vision "moto_crew"}
		}
		{visor "main"
			{bone "visor"}
			{vision "vehicle_top_mgun"}
		}
