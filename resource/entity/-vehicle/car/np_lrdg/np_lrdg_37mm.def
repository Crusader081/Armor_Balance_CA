	          {placer
	             {place "%place"
	                {linkbone "%place"}
	                {attach squat_lie}
	                {turnoff {shadow}}
	                {obstacle disable}
	             }
	          }
	          {Volume "%place"
	             {tags "attach" "attach_%place"}
	             {able clear {bullet 0} {touch 1}}
	          }
	)
	{Placer
	          {place "attach01"
	             {entity "spade"}
	             {Linkbone "attach01"}
