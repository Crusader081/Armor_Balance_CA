	                   {obstacle disable}
	          }
	}
	{extender "inventory"
		{box
			{item "bullet37_bofors_eng ap" 52}
			{item "bullet37_bofors_eng fg" 48}
			{item  "ammo mgun" 1500}
		}
	}
	{Weaponry
